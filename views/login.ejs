<% include partials/header.ejs %>

<main class="container">
    <h1>Login</h1>


    <div class="alert alert-success">Enter your username and password</div>

    <form method="post">
        <div class="form-group">
            <label for="username" class="col-sm-2 control-label">Username:</label>
            <input name="username" id="username" required />
        </div>

        <div class="form-group">
            <label for="password" class="col-sm-2 control-label">Password:</label>
            <input name="password" id="password" type="password" required />
        </div>

        <button class="btn btn-success col-sm-offset-2">Login</button>
        <a href="/facebook">

            <img src="/images/fb.png" alt="Log into Facebook" />
        </a>
        <hr />
        <h4>Register for a new account</h4> <a href="/register" title="Register">Register</a>
    </form>

</main>

